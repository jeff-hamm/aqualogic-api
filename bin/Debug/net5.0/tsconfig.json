{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "removeComments": false,
    "alwaysStrict": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es6",
      "es2015.promise",
      "es2017.object"
    ],
    "allowJs": false,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build/"
  },
  "include": [ "./Content/**/*" ],
  "compileOnSave": true
}